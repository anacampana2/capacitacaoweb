<div class="texto-centro">
  <FONT size="10" face="Avant Garde Bk BT" color="black" >
Cadastro
</FONT>
</div>
<div class="box">
  <form action="/cadastro" method="post">
    <div class="form-group">
      <div class="texto-centro">
        <label for="InputName" class="texto-centro"><FONT size="5" face="Avant Garde Bk BT" color="blue" > Nome</FONT></label>
      </div>
      <input type="text" class="form-control" id="InputName" placeholder="Nome" name = "user[name]">
    </div>
    <div class="form-group">
      <div class="texto-centro">
        <label for="InputStreet" class="texto-centro"><FONT size="5" face="Avant Garde Bk BT" color="blue" > Street</FONT></label>
      </div>
      <input type="text" class="form-control" id="InputStreet" placeholder="Street" name = "user[street]">
    </div>
    <div class="form-group">
      <div class="texto-centro">
        <label for="Inputcity" class="texto-centro"><FONT size="5" face="Avant Garde Bk BT" color="blue" > City</FONT></label>
      </div>
      <input type="text" class="form-control" id="Inputcity" placeholder="City" name = "user[city]">
    </div>
    <div class="cadastro">
      <div class="texto-centro">
        <label for="InputEmail1" ><FONT size="5" face="Avant Garde Bk BT" color="blue" > Endereço de email</FONT></label>
      </div>
      <input type="email" class="form-control" id="InputEmail1" aria-describedby="emailHelp" placeholder="Seu email" name="user[email]">
      <small id="emailHelp" class="form-text text-muted">Nunca vamos compartilhar seu email, com ninguém.</small>
    </div>

    <div class="form-group">
      <div class="texto-centro">
        <label for="InputCep" class="texto-centro"><FONT size="5" face="Avant Garde Bk BT" color="blue" > CEP</FONT></label>
      </div>
      <input type="text" class="form-control" id="InputCep" placeholder="Cep" name = "user[cep]">
    </div>
    <div class="form-group">
      <div class="texto-centro">
        <label for="InputNumber" class="texto-centro"><FONT size="5" face="Avant Garde Bk BT" color="blue" > Number</FONT></label>
      </div>
      <input type="text" class="form-control" id="InputNumber" placeholder="Number" name = "use[number]">
    </div>

    <div class="form-group">
      <div class="texto-centro">
        <label for="InputPassword1" class="texto-centro"><FONT size="5" face="Avant Garde Bk BT" color="blue" > Senha</FONT></label>
      </div>
      <input type="password" class="form-control" id="InputPassword1" placeholder="Senha" name = "user[password]">
    </div>

    <div class="form-group form-check">
      <input type="checkbox" class="form-check-input" id="exampleCheck1">
      <label class="form-check-label" for="exampleCheck1">Aceito os termos de uso</label>
    </div>

    <div class="texto-centro">
      <button type="submit" class="btn btn-primary">Enviar</button>
    </div>
  </form>
</div>
